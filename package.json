{
  "name": "my-telegram-bot",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite", // Menjalankan server dev Vite untuk frontend
    "build": "tsc && vite build", // Build proyek untuk produksi
    "serve": "vite preview", // Menjalankan build produksi secara lokal
    "bot": "ts-node src/bot.ts", // Menjalankan bot Telegram
    "start": "npm run bot" // Alias untuk menjalankan bot
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "telegraf": "^4.12.0", // Library untuk bot Telegram
    "dotenv": "^16.0.3" // Untuk mengelola environment variables
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.1", // Untuk menjalankan TypeScript langsung
    "@types/node": "^20.0.0", // Type definitions untuk Node.js
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0" // Plugin React untuk Vite
  }
}
